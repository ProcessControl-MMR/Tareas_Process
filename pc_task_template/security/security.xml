<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Grupos creados para los roles de plantilla -->
    <record id="group_task_template_admin" model="res.groups">
        <field name="name">Administrar Plantillas</field>
        <field name="category_id" ref="base.module_category_project"/>
    </record>
    <record id="group_task_template_edit" model="res.groups">
        <field name="name">Editar Plantillas</field>
        <field name="category_id" ref="base.module_category_project"/>
    </record>
    <record id="group_task_template_read" model="res.groups">
        <field name="name">Lectura de Plantillas</field>
        <field name="category_id" ref="base.module_category_project"/>
    </record>

<!--    Permisos para los grupos creados-->

    <record id="task_template_admin_access" model="ir.model.access">
            <field name="name">task_template_Admin_Access</field>
            <field name="model_id" ref="model_task_template"/>
            <field name="group_id" ref="group_task_template_admin"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    <record id="task_template_edit_access" model="ir.model.access">
            <field name="name">task_template_Edit_Access</field>
            <field name="model_id" ref="model_task_template"/>
            <field name="group_id" ref="group_task_template_edit"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    <record id="task_template_read_access" model="ir.model.access">
            <field name="name">task_template_Read_Access</field>
            <field name="model_id" ref="model_task_template"/>
            <field name="group_id" ref="group_task_template_read"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
</odoo>
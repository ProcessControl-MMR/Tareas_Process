<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_project_form_inherit_template" model="ir.ui.view">
            <field name="name">project.form.inherit.template</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='alias_def']" position="before">
                    <div class="form-group">
                        <label for="project_template_id">Project task</label>
                        <field name="project_template_id" class="o_input"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

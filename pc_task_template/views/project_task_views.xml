<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_task_form_inherit_template" model="ir.ui.view">
            <field name="name">project.task.form.inherit.template</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='date_deadline_and_recurring_task']" position="after">
                    <group>
                        <field name="task_template_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
